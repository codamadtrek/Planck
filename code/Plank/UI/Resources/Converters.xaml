<ResourceDictionary 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:cvt="clr-namespace:LazyE9.Plank.Core.Converters">

	<cvt:BooleanToVisibilityConverter x:Key="Converter_FalseToHiddenVisibility" TrueVisibility="Visible" FalseVisibility="Hidden" NullVisiblity="Hidden" />
	<cvt:BooleanToVisibilityConverter x:Key="Converter_FalseToCollapsedVisibility" TrueVisibility="Visible" FalseVisibility="Collapsed" NullVisiblity="Collapsed" />
	<cvt:BooleanToVisibilityConverter x:Key="Converter_TrueToHiddenVisibility" TrueVisibility="Hidden" FalseVisibility="Visible" NullVisiblity="Hidden" />
	<cvt:BooleanToVisibilityConverter x:Key="Converter_TrueToCollapsedVisibility" TrueVisibility="Collapsed" FalseVisibility="Visible" NullVisiblity="Collapsed"/>

	<cvt:EnumToBooleanConverter x:Key="Converter_EnumToBoolean"/>

	<cvt:NullableIntToVisibilityConverter x:Key="Converter_NullableIntToVisibility" Reverse="False"/>
	<cvt:NullableIntToVisibilityConverter x:Key="Converter_NullableIntToVisibilityReverse" Reverse="True"/>

	<cvt:StringToHighlightedTextBoxXamlConverter x:Key="Converter_HighlightText"/>

	<cvt:TextIsNotEmptyToVisibilityConverter x:Key="Converter_TextIsNotEmptyToVisibility"/>

</ResourceDictionary>